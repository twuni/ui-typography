{
  "name": "@twuni/ui-typography",
  "description": "UI component for presenting text content using a standardized type scale.",
  "version": "0.0.1",
  "homepage": "https://ui.twuni.dev",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/twuni/ui-typography"
  },
  "author": {
    "email": "devin@canterberry.cc",
    "name": "Devin Canterberry"
  },
  "devDependencies": {
    "@babel/cli": "7.16.0",
    "@babel/core": "7.16.5",
    "@babel/preset-env": "7.16.5",
    "c8": "7.10.0",
    "chai": "4.3.4",
    "eslint": "8.5.0",
    "eslint-plugin-ante": "1.1.0",
    "marked": "4.0.7",
    "mocha": "9.1.3",
    "pak-cli": "0.0.6"
  },
  "scripts": {
    "build": "pak-cli build",
    "docs": "pak-cli docs",
    "lint": "pak-cli lint",
    "test": "pak-cli test",
    "test:coverage": "pak-cli test:coverage"
  },
  "main": "lib/cjs/index.js",
  "module": "lib/esm/index.mjs",
  "sideEffects": false,
  "exports": {
    ".": {
      "import": "./lib/esm/index.mjs",
      "require": "./lib/cjs/index.js"
    }
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": "> 0.25%, not dead"
        }
      ]
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:ante/recommended",
      "plugin:ante/style"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [
      "eslint-plugin-ante"
    ]
  },
  "peerDependencies": {
    "htm": ">=3",
    "preact": ">=10"
  },
  "dependencies": {
    "stylish-preact": "^0.2.0"
  }
}
